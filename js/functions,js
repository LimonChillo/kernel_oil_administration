(function () {
  var text = document.getElementById("english").innerHTML ;

  window.doneCallback = function(response) {
  document.getElementById("arabicText").innerHTML +=response; }

  var s = document.createElement("script");

  s.src = "http://api.microsofttranslator.com/V2/Ajax.svc/Translate?oncomplete=doneCallback&appId=MyAppID&from=en&to=ar&text=" + text + "&oncomplete=doneCallback";
  document.getElementsByTagName("head")[0].appendChild(s);

  }) ();